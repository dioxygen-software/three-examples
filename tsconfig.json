{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "outDir": "dist/types",
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*"
    ]
}